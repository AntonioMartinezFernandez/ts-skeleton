{
  "name": "ts-skeleton",
  "version": "1.0.0",
  "description": "Express / Typescript boilerplate for microservices and complete RESTful APIs",
  "main": "start.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn src/start.ts",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node ./dist/start.js",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --watchAll",
    "test:unit": "jest --config=jest.config.unit.ts",
    "test:integration": "jest --config=jest.config.integration.ts",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntonioMartinezFernandez/ts-skeleton.git"
  },
  "keywords": [
    "express",
    "typescript",
    "boilerplate",
    "api",
    "microservice",
    "solid",
    "clean",
    "architecture"
  ],
  "author": "Antonio Mart√≠nez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AntonioMartinezFernandez/ts-skeleton/issues"
  },
  "homepage": "https://github.com/AntonioMartinezFernandez/ts-skeleton#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/inversify": "^2.0.33",
    "@types/jest": "^28.1.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.44",
    "@types/prettyjson": "^0.0.30",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "prettier": "^2.7.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3"
